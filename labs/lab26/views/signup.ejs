<h1 class="title">Entrar</h1>

<form action="/" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

  <label for="nombre">Nombre:</label>
  <input
    required
    name="nombre"
    id="nombre"
    class="input is-rounded"
    type="text"
    placeholder="Eduardo Daniel Juárez Pineda"
  />
  <br /><br />
  <label for="username">Username:</label>
  <input
    name="username"
    id="username"
    class="input is-rounded"
    type="text"
    placeholder="lalo"
  />
  <br /><br />
  <label for="escuela">Escuela:</label>
  <input
    name="escuela"
    id="escuela"
    class="input is-rounded"
    type="text"
    placeholder="Tec"
  />
  <br /><br />
  <label for="password">Contraseña:</label>
  <input
    name="password"
    id="password"
    class="input is-rounded"
    type="password"
  />
  <div>
    <a href="/auth/google" class="button is-link">
      <span class="icon">
        <i class="fab fa-google"></i>
      </span>
      <span>Iniciar sesión con Google</span>
    </a>
  </div>

  <br /><br />
  <input class="button is-rounded is-success" type="submit" value="Entrar" />
</form>
