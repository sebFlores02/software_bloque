<div class="nuevo">
    <h1 class="title">Registrar nuevo perro</h1>

    <form action="/nuevo" method="POST">

        <label for="nombre">Nombre:</label>
        <input name="nombre" id="nombre" class="input is-rounded" type="text" placeholder="Nombre" >

        <label for="escuela">Escuela:</label>
        <input name="escuela" id="escuela" class="input is-rounded" type="text" placeholder="Escuela">

        <label for="user">User:</label>
        <input name="user" id="user" class="input is-rounded" type="text" placeholder="User">

        <label for="descripcion">Descripcion:</label>
        <input name="descripcion" id="descripcion" class="input is-rounded" type="text" placeholder="Anade una descripcion">

        <input class="button is-rounded is-info" type="submit" value="Registrar">
    </form>

</div>