<%- include('includes/head.ejs') %>

<h1 class="title">Razas de perros</h1>

<% if (razas.length > 0) { %>
    <div class="columns">
        <% let columns = 0; %>
        <% for (let raza of razas) { %>
            <% if (columns % 4 == 0) { %>
    </div>
    <div class="columns">
            <% } %>
            <% columns++; %>
            <div class="column">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="<%= raza.imagen %>" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="<%= raza.imagen %>" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4"><%= raza.raza %></p>
                                <p class="subtitle is-6">@<%= raza.nombre %></p>
                            </div>
                        </div>

                        <div class="content">
                            <%= raza.descripcion %> <a>@<%= raza.nombre %></a>.
                            <a href="#">#css</a> <a href="#">#responsive</a>
                            <br>
                            <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>No hay razas registradas</h1>
<% } %>

<%- include('includes/foot.ejs') %>